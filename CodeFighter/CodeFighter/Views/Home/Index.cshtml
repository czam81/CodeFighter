@{
    ViewBag.Title = "Home Page";
}
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <form class="well">
        <div class="row form-group">
            <div class="col-sm-6">
                Player 1:<input id="txtPlayer1Name" type="text" />
            </div>
            <div class="col-sm-6">
                Role:<select  id="txtPlayer1Role">
                    <option value="DEV">DEV</option>
                    <option value="QA">QA</option>
                    <option value="DBA">DBA</option>
                    <option value="PM">PM</option>
                </select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-6">
                Player 2:<input  id="txtPlayer2Name" type="text" />
            </div>
            <div class="col-sm-6">
                Role:<select id="txtPlayer2Role">
                    <option value="DEV">DEV</option>
                    <option value="QA">QA</option>
                    <option value="DBA">DBA</option>
                    <option value="PM">PM</option>
                </select>
            </div>
        </div>
        <div class="row form-group text-center">
            <input id="btnStartGame" type="button" value="Start Game" />
        </div>
    </form>
</body>
</html>

<script>
    $(document).ready(function () {
        $("#txtPlayer1Name").focus();

        $("#btnStartGame").on("click", function () {
            $.ajax({
                type: "POST",
                url: "@(Url.Action("SendData"))",
                success: function (e) {
                    
                        window.location.href = "@(Url.Action("Index", "Game"))"
                    
                }
        });
    })
    });


</script>