<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>    
    <div class="col-sm-6">
        <div class="row">@ViewBag.Player1Name</div>
        <div class="row">
            Life: <span>@ViewBag.Player1CurrentLife</span>/<span>@ViewBag.MaxLife</span>
        </div>
        <div class="row">
            Energy: <span>@ViewBag.Player1CurrentEnergy</span>/<span>@ViewBag.MaxEnergy</span>
        </div>
        <div class="row">
            <input type="button" id="btnPlayer1Punch" value="Punch"/>
            <input type="button" id="btnPlayer1Kick" value="Kick" />
            <input type="button" id="btnPlayer1Special" value="Special" />
            <input type="button" id="btnPlayer1Heal" value="Heal" />
        </div>
    </div>
    <div class="col-sm-6">
    <div class="row">@ViewBag.Player2Name</div>
    <div class="row">
        Life: <span>@ViewBag.Player2CurrentLife</span>/<span>@ViewBag.MaxLife</span>
    </div>
    <div class="row">
        Energy: <span>@ViewBag.Player2CurrentEnergy</span>/<span>@ViewBag.MaxEnergy</span>
    </div>
    <div class="row">
        <input type="button" id="btnPlayer2Punch" value="Punch" />
        <input type="button" id="btnPlayer2Kick" value="Kick" />
        <input type="button" id="btnPlayer2Special" value="Special" />
        <input type="button" id="btnPlayer2Heal" value="Heal" />
    </div>
</div>
</body>
</html>
